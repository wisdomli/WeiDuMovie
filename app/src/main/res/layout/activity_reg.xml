<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/long_beijing"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_35"
            android:background="@drawable/register_icon_name_default"
            android:layout_width="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_120"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_125"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/my_phone"
            android:backgroundTint="#A9A9A9"
            android:hint="昵称"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_35"
            android:background="@drawable/register_icon_sex_default"
            android:layout_width="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="#A9A9A9"
            android:hint="性别"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_35"
            android:background="@drawable/register_icon_date_default"
            android:layout_width="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="#A9A9A9"
            android:hint="出生日期"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_35"
            android:background="@drawable/register_icon_phone_default"
            android:layout_width="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="#A9A9A9"
            android:hint="手机号"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_35"
            android:background="@drawable/register_icon_mail_default"
            android:layout_width="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="#A9A9A9"
            android:hint="邮箱"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_35"
            android:background="@drawable/register_icon_lock_default"
            android:layout_width="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="#A9A9A9"
            android:hint="登录密码"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/logshape"
            android:text="注册"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="@dimen/dp_310"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>
</LinearLayout>
