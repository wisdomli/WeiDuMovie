<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/long_beijing"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_120"
            android:background="@drawable/register_icon_name_default" />

        <EditText
            android:id="@+id/my_user_name"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_125"
            android:backgroundTint="#A9A9A9"
            android:gravity="center"
            android:hint="昵称"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/register_icon_sex_default" />

        <EditText
            android:id="@+id/my_user_sex"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:backgroundTint="#A9A9A9"
            android:gravity="center"
            android:hint="性别"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/register_icon_date_default" />

        <EditText
            android:id="@+id/my_user_data"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:backgroundTint="#A9A9A9"
            android:gravity="center"
            android:hint="出生日期"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/register_icon_phone_default" />

        <EditText
            android:id="@+id/my_user_phonenumber"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:backgroundTint="#A9A9A9"
            android:gravity="center"
            android:hint="手机号"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/register_icon_mail_default" />

        <EditText
            android:id="@+id/my_user_email"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:backgroundTint="#A9A9A9"
            android:gravity="center"
            android:hint="邮箱"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/register_icon_lock_default" />

        <EditText
            android:id="@+id/my_user_pwd"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:backgroundTint="#A9A9A9"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="登录密码"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/register_icon_lock_default" />

        <EditText
            android:id="@+id/repeat_pwd"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:backgroundTint="#A9A9A9"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="重复密码"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Reg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_40">

        <TextView
            android:layout_width="@dimen/dp_310"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/logshape"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ffffff" />
    </RelativeLayout>
</LinearLayout>
