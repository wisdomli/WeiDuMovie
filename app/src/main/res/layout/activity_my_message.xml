<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:text="用户信息"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/my_shape"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_178" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_178">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">
                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/message"
                    android:text="用户头像"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="----------------------------------------"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic_image"
                    android:layout_marginLeft="@dimen/dp_240"
                    android:layout_marginTop="@dimen/dp_10"
                    app:roundAsCircle="true"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_name_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34">
                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/message"
                    android:text="用户昵称"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="----------------------------------------"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/nickName"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/dp_235"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34">
                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/message"
                    android:text="用户性别"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="----------------------------------------"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/my_sex"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/dp_245"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34">
                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/message"
                    android:text="出生日期"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/my_birthday"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/dp_220"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/my_shape"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_100" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_178">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/message"
                    android:text="手机号"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/phone_text"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/dp_195"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_20"
                android:text="----------------------------------------"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/message"
                    android:text="邮箱"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/my_email"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/dp_165"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/my_shape"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_40" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_178">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:textSize="14sp"
                    android:layout_below="@+id/message"
                    android:text="重置密码"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_245"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/com_icon_next_default"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/back_login"
            android:background="@drawable/logshape"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="@dimen/dp_310"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/image_back"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        android:src="@drawable/com_icon_my_default_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />
</LinearLayout>
