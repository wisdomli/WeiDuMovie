<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:text="意见反馈"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_context"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/my_shape"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_64" >

    </EditText>
    <RelativeLayout
        android:id="@+id/submission"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/my_shape"
        android:layout_width="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_285"
        android:layout_height="@dimen/dp_25">
        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="提交"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/image_back"
        android:layout_marginTop="@dimen/dp_355"
        android:layout_marginLeft="@dimen/dp_24"
        android:src="@drawable/com_icon_my_default_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />
</LinearLayout>
