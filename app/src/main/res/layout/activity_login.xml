<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/long_beijing"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_35"
            android:background="@drawable/log_icon_phone_default"
            android:layout_width="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_140"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_145"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/login_phone"
            android:backgroundTint="#FFFFFF"
            android:hint="手机号"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_35"
            android:background="@drawable/log_icon_lock_default"
            android:layout_width="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_35"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/login_password"
            android:backgroundTint="#FFFFFF"
            android:hint="登录密码"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_305"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="@dimen/dp_305"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@drawable/log_icon_eye_default"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_20" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/password_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pwd"
            android:layout_toRightOf="@+id/password_checkbox"
            android:layout_width="wrap_content"
            android:text="记住密码"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_06"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_toRightOf="@+id/pwd"
            android:id="@+id/login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/log"
            android:layout_toRightOf="@+id/login_checkbox"
            android:layout_width="wrap_content"
            android:text="自动登录"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_06"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_reg"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_toRightOf="@+id/log"
            android:layout_width="wrap_content"
            android:text="快速注册"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_06"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/login_lg"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/logshape"
            android:text="登录"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="@dimen/dp_310"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gang"
            android:textColor="#ffffff"
            android:text="____________"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/san"
            android:layout_toRightOf="@+id/gang"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_05"
            android:text="第三方账号快速登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/san"
            android:textColor="#ffffff"
            android:text="____________"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/log_icon_weixin_default"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50" />
    </RelativeLayout>

</LinearLayout>
